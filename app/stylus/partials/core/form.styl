input

  &.wide
    border: 0;
    padding: 20px 20px;
    width: 100%;
    box-sizing: border-box

    &:focus
      outline none
      border none

.btn

  &.saveWordBtn
    background accent-first-color
    fill common-second-color

  &.btn-accent
    background  accent-first-color
    fill common-second-color
    color common-second-color

    svg, span
      vertical-align middle

  &.btn-round
    border-radius: 50%;
    width: 50px;
    height: 50px;
    padding: 0;

  &.btn-link
    outline 0
    border 0

    &:focus
      outline 0
      border 0