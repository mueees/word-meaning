seed-blade
  display block

  .content
    background main-second-color
    color white
    position fixed
    top 0
    bottom 0
    width 250px
    z-index 20
    transform translate3d(-80%, 0, 0)
    transition: transform .25s ease-in-out
    -webkit-transition: -webkit-transform .25s ease-in-out

    &.left
      &.expanded
        transform translate3d(0, 0, 0)
      &.collapsed
        transform translate3d(-100%, 0, 0)